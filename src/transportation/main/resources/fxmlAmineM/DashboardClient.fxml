                        <Label fx:id="favoriteAirlineLabel" text="Favorite Airline: None"
                               styleClass="card-label">
                            <VBox.margin>
                                <Insets top="10.0" left="20.0"/>
                            </VBox.margin>
                        </Label>
                        <Label fx:id="favoriteAccommodationLabel" text="Favorite Accommodation: None"
                               styleClass="card-label">
                            <VBox.margin>
                                <Insets top="5.0" left="20.0"/>
