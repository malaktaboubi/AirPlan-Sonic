                <GridPane hgap="20.0" vgap="20.0" alignment="TOP_CENTER">
                    <!-- Travel Summary Card -->
                    <VBox styleClass="dashboard-card" prefWidth="300.0" prefHeight="400.0"
                          GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <HBox alignment="CENTER_LEFT">
                            <?import org.kordamp.ikonli.javafx.FontIcon?>
                            <Label styleClass="card-icon">
                                <graphic>
                                    <FontIcon iconLiteral="fa-user" iconSize="24" fill="#3498db" />
                                </graphic>
                                <HBox.margin>
                                    <Insets left="20.0" top="10.0" />
                                </HBox.margin>
                            </Label>
                            <Label text="My Travel Summary" styleClass="card-title"/>
                        </HBox>
                        <Label fx:id="totalTripsLabel" text="Total Trips Booked: 0" styleClass="card-label">
                            <VBox.margin>
                                <Insets top="10.0" left="20.0"/>
                            </VBox.margin>
                        </Label>
                        <Label fx:id="flightsTakenLabel" text="Flights Taken: 0" styleClass="card-label">
