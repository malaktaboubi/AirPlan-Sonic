<?import org.kordamp.ikonli.javafx.FontIcon?>
<BorderPane fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="670.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.airPlan.controllers.Admin.ClientDashboardController">
    <top>
        <Pane prefHeight="100.0" prefWidth="1000.0" styleClass="header-pane" BorderPane.alignment="CENTER">
            <HBox prefHeight="100.0" prefWidth="1000.0" alignment="CENTER_LEFT">
                <ImageView fitHeight="80.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
                    <HBox.margin>
                        <Insets left="20.0" top="10.0" />
                    </HBox.margin>
                    <Image url="@../../images/logoAirplan.png" />
                </ImageView>
                <Label fx:id="clientNameLabel" text="Client: [Name]" styleClass="client-label">
                    <HBox.margin>
                        <Insets left="20.0" top="40.0" />
                    </HBox.margin>
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Button fx:id="btnProfile" text="Profile" onAction="#goToProfile" styleClass="save-button">
                    <HBox.margin>
                        <Insets left="500.0" top="40.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="btnLogout" text="Logout" onAction="#logout" styleClass="logout-button">
                    <HBox.margin>
                        <Insets left="10.0" top="40.0" />
                    </HBox.margin>
                </Button>
            </HBox>
        </Pane>
    </top>
    <center>
        <ScrollPane fitToWidth="true" prefHeight="570.0" prefWidth="1000.0" styleClass="scroll-pane"
                    BorderPane.alignment="CENTER">
            <VBox prefWidth="1000.0" styleClass="content-pane" spacing="20.0" alignment="TOP_CENTER">
                <Label text="Client Dashboard" styleClass="section-title">
                    <VBox.margin>
                        <Insets top="20.0"/>
                    </VBox.margin>
