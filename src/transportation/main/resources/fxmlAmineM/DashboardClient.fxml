                    <VBox styleClass="dashboard-card" prefWidth="300.0" prefHeight="400.0"
                          GridPane.columnIndex="2" GridPane.rowIndex="1">
                        <HBox alignment="CENTER_LEFT">
                            <?import org.kordamp.ikonli.javafx.FontIcon?>
                            <Label styleClass="card-icon">
                                <graphic>
                                    <FontIcon iconLiteral="fa-trophy" iconSize="24" fill="#3498db" />
                                </graphic>
                                <HBox.margin>
                                    <Insets left="20.0" top="10.0" />
                                </HBox.margin>
                            </Label>
                            <Label text="My Program Participation" styleClass="card-title"/>
                        </HBox>
                        <Label fx:id="activeProgramsLabel" text="Active Programs: None" styleClass="card-label">
                            <VBox.margin>
                                <Insets top="10.0" left="20.0"/>
                            </VBox.margin>
                        </Label>
                        <Label fx:id="programHistoryLabel" text="Program History: None" styleClass="card-label"
                               wrapText="true">
                            <VBox.margin>
                                <Insets top="5.0" left="20.0" right="20.0"/>
                            </VBox.margin>
                        </Label>
                        <Label fx:id="benefitsUnlockedLabel" text="Benefits Unlocked: None"
                               styleClass="card-label" wrapText="true">
                            <VBox.margin>
                                <Insets top="5.0" left="20.0" right="20.0"/>
