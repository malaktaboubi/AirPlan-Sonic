                            <?import org.kordamp.ikonli.javafx.FontIcon?>
                            <Label styleClass="card-icon">
                                <graphic>
                                    <FontIcon iconLiteral="fa-calendar" iconSize="24" fill="#3498db" />
                                </graphic>
                                <HBox.margin>
                                    <Insets left="20.0" top="10.0" />
                                </HBox.margin>
                            </Label>
                            <Label text="Upcoming Reservations" styleClass="card-title"/>
                        </HBox>
                        <Label fx:id="nextFlightLabel" text="Next Flight: None" styleClass="card-label">
                            <VBox.margin>
                                <Insets top="10.0" left="20.0"/>
                            </VBox.margin>
                        </Label>
                        <Label fx:id="nextAccommodationLabel" text="Next Accommodation: None"
                               styleClass="card-label">
                            <VBox.margin>
