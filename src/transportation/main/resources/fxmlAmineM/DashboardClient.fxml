                        <HBox alignment="CENTER_LEFT">
                            <?import org.kordamp.ikonli.javafx.FontIcon?>
                            <Label styleClass="card-icon">
                                <graphic>
                                    <FontIcon iconLiteral="fa-heart" iconSize="24" fill="#3498db" />
                                </graphic>
                                <HBox.margin>
