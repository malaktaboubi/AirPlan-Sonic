                            <VBox.margin>
                                <Insets top="5.0" left="20.0"/>
                            </VBox.margin>
                        </Label>
                    </VBox>
                    <!-- Feedback Activity Card -->
                    <VBox styleClass="dashboard-card" prefWidth="300.0" prefHeight="400.0"
                          GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <HBox alignment="CENTER_LEFT">
                            <?import org.kordamp.ikonli.javafx.FontIcon?>
                            <Label styleClass="card-icon">
                                <graphic>
                                    <FontIcon iconLiteral="fa-comment" iconSize="24" fill="#3498db" />
                                </graphic>
                                <HBox.margin>
                                    <Insets left="20.0" top="10.0" />
                                </HBox.margin>
                            </Label>
                            <Label text="Feedback Activity" styleClass="card-title"/>
